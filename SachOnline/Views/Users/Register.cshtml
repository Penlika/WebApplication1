@model SachOnline.Models.KHACHHANG
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<h2>Register</h2>
<div class="container" style="width:600px">
    <form action="/Users/Register" method="post">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="mb-3">
            <label class="form-label">Họ Tên</label>
            <input type="text" class="form-control" name="HoTen">
            @Html.ValidationMessageFor(model => model.HoTen, "", new { @class = "text-danger" })
        </div>
        <div class="mb-3">
            <label class="form-label">Tên tài khoản</label>
            <input type="text" class="form-control" name="TaiKhoan">
            @Html.ValidationMessageFor(model => model.Taikhoan, "", new { @class = "text-danger" })
        </div><div class="mb-3">
            <label class="form-label">Mật Khẩu</label>
            <input type="password" class="form-control" name="MatKhau">
            @Html.ValidationMessageFor(model => model.Matkhau, "", new { @class = "text-danger" })
        </div><div class="mb-3">
            <label class="form-label">Mật Khẩu nhập lại</label>
            <input type="password" class="form-control" name="MatKhauNL"
                   @Html.ValidationMessageFor(model => model.MatKhauNL, "", new { @class = "text-danger" })
        </div>
        <div class="mb-3">
            <label class="form-label">Email</label>
            <input type="email" class="form-control" name="Email">
            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
        </div>
        <div class="mb-3">
            <label class="form-label">Địa chỉ</label>
            <input type="text" class="form-control" name="DiaChi">
            @Html.ValidationMessageFor(model => model.DiachiKH, "", new { @class = "text-danger" })
        </div>
        <div class="mb-3">
            <label class="form-label">SĐT</label>
            <input type="text" class="form-control" name="SDT">
            @Html.ValidationMessageFor(model => model.DienthoaiKH, "", new { @class = "text-danger" })
        </div>
        <div class="mb-3">
            <label class="form-label">Ngày sinh</label>
            <input type="text" class="form-control" name="NgaySinh">
            @Html.ValidationMessageFor(model => model.Ngaysinh, "", new { @class = "text-danger" })
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>
